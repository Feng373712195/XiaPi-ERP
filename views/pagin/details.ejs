<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title><%= title %></title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/dateils.css"/>
		<link rel="stylesheet" type="text/css" href="/stylesheets/btnbox.css"/>
		<link rel="stylesheet" type="text/css" href="/stylesheets/viewer.min.css">
		<script type="text/javascript" src='/javascripts/jquery-1.3.2.min.js'></script>
	</head>
	<body>
		<h2 class="head">产品详细</h2>
		<div id="pic-box">
			<% if(doc.pic) {%>
				<% if (doc.pic[0]) { %>
					<span class="pic f-pic" ><img  class="pic-item" data-original="/uploadImg/<%= doc.code %>/<%= doc.pic[0] %>" src="/uploadImg/<%= doc.code %>/<%= doc.pic[0] %>" alt=""/></span>
				<% }else {%>
					<span class="pic f-pic" >主图</span>
				<% } %> 
				
				<% for(var i =1; i<9; i++) {%>
					<% if (doc.pic[i]) { %>
						<span class="pic" ><img  class="pic-item"  data-original="/uploadImg/<%= doc.code %>/<%= doc.pic[i] %>" src="/uploadImg/<%= doc.code %>/<%= doc.pic[i] %>" alt=""/></span>
					<% }else {%>
						<span class="pic" >副图</span>
					<% } %>
				<% } %> 
			<% }else {%>
				<span class="pic f-pic" >主图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
				<span class="pic" >副图</span>
			<% } %> 
		</div>
		<div id='data-box'>
			<div><span class="title">标题:</span><span id="title"><%= doc.title %></span></div>
			<div><span class="title">产品编码:</span><span id="code"><%= doc.code %></span></div>
			<div><span class="title">产品价格:</span><span id="price"><%= doc.price %></span></div>
			<div><span class="title">供应商资料:</span><span id="supplier"><%= doc.supplier %></span></div>
			<div><span class="title">拿货地址:</span><span id="address"><%= doc.address %></span></div>

			<% if(doc.website.indexOf('http')!=-1||doc.website.indexOf('https')!=-1) {%>
				<div><span class="title">网上采购:</span><span id="address"><a href="<%= doc.website %>">前往拿货地址</a></span></div>
			<% }else {%>
				<div><span class="title">网上采购:</span><span id="address"><%= doc.website %></span></div>
			<% }%>

			<div><span class="title">备注:</span><span id="emarks"><%= doc.emarks %></span></div>
		</div>
		<div class="btnbox bleft">
			<button id='revisebtn'>修改</button>
			<button id='removebtn'>删除</button>
			<button id='backbtn'>返回</button>
			<span id='gn'>选项</span>
		</div>
	</body>
	<script src="/javascripts/mui.min.js" type="text/javascript" charset="utf-8"></script>
	<script src="/javascripts/btnbox.js" type="text/javascript" charset="utf-8"></script>
	<script src="/javascripts/view.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript">
		$(function(){

			var gnbox = document.querySelector('.btnbox');
			var revisebtn = document.getElementById('revisebtn');
			var removebtn = document.getElementById('removebtn');
			var backbtn = document.getElementById('backbtn');
			var code  = document.getElementById('code');

			var viewer = new Viewer(document.getElementById('pic-box'), {
				url: 'data-original'
			});


			backfun(backbtn);
			revisefun(revisebtn,code.innerText);
			removefun(removebtn,code.innerText);	


		})
	</script>
</html>
